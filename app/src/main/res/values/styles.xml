<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentCustom</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_24dp</item>
        <item name="cardBackgroundColor">@color/background</item>
        <item name="android:textColor">@color/defaultText</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
